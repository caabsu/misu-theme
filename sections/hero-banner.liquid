<section
  class="hero-banner full-width"
  data-hero-banner
  style="
    --hero-min-height-desktop: {{ section.settings.min_height_desktop }}vh;
    --hero-min-height-mobile: {{ section.settings.min_height_mobile }}vh;
    --hero-text-align: {{ section.settings.text_alignment }};
    --hero-content-position: {{ section.settings.content_position }};
    {% if section.settings.body_weight != 'default' %}--hero-body-weight: {{ section.settings.body_weight }};{% endif %}
    --hero-subheading-size-mobile: {{ section.settings.subheading_size_mobile }}px;
    --hero-subheading-size-desktop: {{ section.settings.subheading_size_desktop }}px;
    --hero-eyebrow-size-mobile: {{ section.settings.eyebrow_size_mobile }}px;
    --hero-eyebrow-size-desktop: {{ section.settings.eyebrow_size_desktop }}px;
    --hero-eyebrow-color: {{ section.settings.eyebrow_color }};
    --hero-subheading-color: {{ section.settings.subheading_color }};
    --hero-heading-1-color: {{ section.settings.heading_1_color }};
    --hero-heading-1-weight: {{ section.settings.heading_1_weight }};
    --hero-heading-1-style: {{ section.settings.heading_1_style }};
    --hero-heading-1-size-mobile: {{ section.settings.heading_1_size_mobile }}px;
    --hero-heading-1-size-desktop: {{ section.settings.heading_1_size_desktop }}px;
    --hero-heading-2-color: {{ section.settings.heading_2_color }};
    --hero-heading-2-weight: {{ section.settings.heading_2_weight }};
    --hero-heading-2-style: {{ section.settings.heading_2_style }};
    --hero-heading-2-size-mobile: {{ section.settings.heading_2_size_mobile }}px;
    --hero-heading-2-size-desktop: {{ section.settings.heading_2_size_desktop }}px;
    --hero-heading-3-color: {{ section.settings.heading_3_color }};
    --hero-heading-3-weight: {{ section.settings.heading_3_weight }};
    --hero-heading-3-style: {{ section.settings.heading_3_style }};
    --hero-heading-3-size-mobile: {{ section.settings.heading_3_size_mobile }}px;
    --hero-heading-3-size-desktop: {{ section.settings.heading_3_size_desktop }}px;
    --hero-btn-bg: {{ section.settings.button_color | default: settings.color_primary }};
    --hero-btn-text: {{ section.settings.button_text_color | default: '#ffffff' }};
    --hero-btn-radius: {{ section.settings.button_radius }}px;
    --hero-btn-font-size: {{ section.settings.button_font_size }}px;
    --hero-btn-font-weight: {{ section.settings.button_font_weight }};
  "
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero-banner__background">
    {% if section.settings.background_image %}
      {{ section.settings.background_image | image_url: width: 2400 | image_tag: loading: 'eager', class: 'hero-banner__image', fetchpriority: 'high' }}
    {% else %}
      <div class="hero-banner__placeholder"></div>
    {% endif %}
    <div class="hero-banner__overlay" style="--overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-banner__content">
    <div class="hero-banner__text">
      {% if section.settings.eyebrow != blank %}
        <span class="hero-banner__eyebrow">{{ section.settings.eyebrow }}</span>
      {% endif %}

      {% if section.settings.heading_1 != blank or section.settings.heading_2 != blank or section.settings.heading_3 != blank %}
        <h1 class="hero-banner__heading">
          <span class="hero-banner__heading-line">
            {%- if section.settings.heading_1 != blank -%}
              <span class="hero-banner__heading-part hero-banner__heading-part--1">{{ section.settings.heading_1 }}</span>
            {%- endif -%}
            {%- if section.settings.heading_2 != blank -%}
              <span class="hero-banner__heading-part hero-banner__heading-part--2">{{ section.settings.heading_2 }}</span>
            {%- endif -%}
            {%- if section.settings.heading_3 != blank -%}
              <span class="hero-banner__heading-part hero-banner__heading-part--3">{{ section.settings.heading_3 }}</span>
            {%- endif -%}
          </span>
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <div class="hero-banner__actions">
          <a href="{{ section.settings.button_url }}" class="hero-banner__btn">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Scroll indicator {%- endcomment -%}
  {% if section.settings.show_scroll_indicator %}
    <div class="hero-banner__scroll-indicator">
      <div class="hero-banner__scroll-line"></div>
    </div>
  {% endif %}
</section>

{% stylesheet %}
  .hero-banner {
    position: relative;
    min-height: var(--hero-min-height-mobile);
    display: flex;
    align-items: var(--hero-content-position, center);
    justify-content: center;
    overflow: hidden;
    margin-top: calc(-1 * var(--header-height));
    padding-top: var(--header-height);
  }

  .hero-banner__background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.02);
    animation: heroZoom 20s ease-out forwards;
  }

  .hero-banner__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  }

  .hero-banner__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, calc(var(--overlay-opacity) + 0.1)) 0%,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.5)) 50%,
      rgba(0, 0, 0, var(--overlay-opacity)) 100%
    );
  }

  .hero-banner__content {
    width: 100%;
    max-width: var(--page-width);
    padding: var(--space-3xl) var(--page-margin);
    text-align: var(--hero-text-align);
  }

  .hero-banner__text {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .hero-banner[style*="text-align: left"] .hero-banner__text {
    margin-left: 0;
    align-items: flex-start;
  }

  .hero-banner[style*="text-align: center"] .hero-banner__text {
    align-items: center;
  }

  .hero-banner__eyebrow {
    display: inline-block;
    font-size: var(--hero-eyebrow-size-mobile);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--hero-eyebrow-color);
    padding: var(--space-xs) var(--space-md);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 100px;
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.2s;
  }

  .hero-banner__heading {
    font-family: var(--font-heading-family);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin: 0;
    overflow: hidden;
  }

  .hero-banner__heading-line {
    display: block;
    opacity: 0;
    transform: translateY(100%);
    animation: heroReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s;
  }

  .hero-banner__heading-part {
    display: inline;
  }

  .hero-banner__heading-part--1 {
    color: var(--hero-heading-1-color);
    font-weight: var(--hero-heading-1-weight);
    font-style: var(--hero-heading-1-style);
    font-size: var(--hero-heading-1-size-mobile);
  }

  .hero-banner__heading-part--2 {
    color: var(--hero-heading-2-color);
    font-weight: var(--hero-heading-2-weight);
    font-style: var(--hero-heading-2-style);
    font-size: var(--hero-heading-2-size-mobile);
  }

  .hero-banner__heading-part--3 {
    color: var(--hero-heading-3-color);
    font-weight: var(--hero-heading-3-weight);
    font-style: var(--hero-heading-3-style);
    font-size: var(--hero-heading-3-size-mobile);
  }

  .hero-banner__subheading {
    font-family: var(--font-body-family);
    font-size: var(--hero-subheading-size-mobile);
    font-weight: var(--hero-body-weight, var(--font-body-weight));
    line-height: 1.6;
    color: var(--hero-subheading-color);
    margin: 0;
    max-width: 50ch;
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.6s;
  }

  .hero-banner__actions {
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.8s;
  }

  .hero-banner__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1.25rem;
    font-family: inherit;
    font-size: var(--hero-btn-font-size);
    font-weight: var(--hero-btn-font-weight);
    text-decoration: none;
    background: var(--hero-btn-bg);
    color: var(--hero-btn-text);
    border: none;
    border-radius: var(--hero-btn-radius);
    cursor: pointer;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .hero-banner__btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .hero-banner__scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    animation: heroFadeUp 0.8s ease forwards 1.2s;
  }

  .hero-banner__scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes heroZoom {
    from { transform: scale(1.1); }
    to { transform: scale(1); }
  }

  @keyframes heroFadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes heroReveal {
    from {
      opacity: 0;
      transform: translateY(100%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scrollPulse {
    0%, 100% {
      opacity: 0.5;
      transform: scaleY(1);
    }
    50% {
      opacity: 1;
      transform: scaleY(1.2);
    }
  }

  @media (min-width: 768px) {
    .hero-banner {
      min-height: var(--hero-min-height-desktop);
    }

    .hero-banner__content {
      padding: var(--space-4xl) var(--page-margin);
    }

    .hero-banner__text {
      gap: var(--space-lg);
    }

    .hero-banner__eyebrow {
      font-size: var(--hero-eyebrow-size-desktop);
    }

    .hero-banner__heading-part--1 {
      font-size: var(--hero-heading-1-size-desktop);
    }

    .hero-banner__heading-part--2 {
      font-size: var(--hero-heading-2-size-desktop);
    }

    .hero-banner__heading-part--3 {
      font-size: var(--hero-heading-3-size-desktop);
    }

    .hero-banner__subheading {
      font-size: var(--hero-subheading-size-desktop);
    }

    .hero-banner__actions {
      margin-top: var(--space-lg);
    }
  }
{% endstylesheet %}

