      "default": "center"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "t:sections.hero_banner.content_position",
      "options": [
        { "value": "flex-start", "label": "t:sections.hero_banner.position_top" },
        { "value": "center", "label": "t:sections.hero_banner.position_center" },
        { "value": "flex-end", "label": "t:sections.hero_banner.position_bottom" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "t:sections.hero_banner.show_scroll_indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero_banner.name"
    }
  ]
}
