<section
  class="hero-banner full-width"
  data-hero-banner
  style="
    --hero-min-height-desktop: {{ section.settings.min_height_desktop }}vh;
    --hero-min-height-mobile: {{ section.settings.min_height_mobile }}vh;
    --hero-text-align: {{ section.settings.text_alignment }};
    --hero-content-position: {{ section.settings.content_position }};
  "
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero-banner__background">
    {% if section.settings.background_image %}
      {{ section.settings.background_image | image_url: width: 2400 | image_tag: loading: 'eager', class: 'hero-banner__image', fetchpriority: 'high' }}
    {% else %}
      <div class="hero-banner__placeholder"></div>
    {% endif %}
    <div class="hero-banner__overlay" style="--overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-banner__content">
    <div class="hero-banner__text">
      {% if section.settings.eyebrow != blank %}
        <span class="hero-banner__eyebrow">{{ section.settings.eyebrow }}</span>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="hero-banner__heading">
          <span class="hero-banner__heading-line">{{ section.settings.heading }}</span>
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <div class="hero-banner__actions">
          <a href="{{ section.settings.button_url }}" class="btn btn--primary btn--lg hero-banner__btn">
            {{ section.settings.button_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Scroll indicator {%- endcomment -%}
  {% if section.settings.show_scroll_indicator %}
    <div class="hero-banner__scroll-indicator">
      <div class="hero-banner__scroll-line"></div>
    </div>
  {% endif %}
</section>

{% stylesheet %}
  .hero-banner {
    position: relative;
    min-height: var(--hero-min-height-mobile);
    display: flex;
    align-items: var(--hero-content-position, center);
    justify-content: center;
    overflow: hidden;
    margin-top: calc(-1 * var(--header-height-mobile));
    padding-top: var(--header-height-mobile);
  }

  .hero-banner__background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.02);
    animation: heroZoom 20s ease-out forwards;
  }

  .hero-banner__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  }

  .hero-banner__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, calc(var(--overlay-opacity) + 0.1)) 0%,
      rgba(0, 0, 0, calc(var(--overlay-opacity) * 0.5)) 50%,
      rgba(0, 0, 0, var(--overlay-opacity)) 100%
    );
  }

  .hero-banner__content {
    width: 100%;
    max-width: var(--page-width);
    padding: var(--space-3xl) var(--page-margin);
    text-align: var(--hero-text-align);
  }

  .hero-banner__text {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .hero-banner[style*="text-align: left"] .hero-banner__text {
    margin-left: 0;
    align-items: flex-start;
  }

  .hero-banner[style*="text-align: center"] .hero-banner__text {
    align-items: center;
  }

  .hero-banner__eyebrow {
    display: inline-block;
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.85);
    padding: var(--space-xs) var(--space-md);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 100px;
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.2s;
  }

  .hero-banner__heading {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 600;
    line-height: 1.05;
    letter-spacing: -0.03em;
    color: #fff;
    margin: 0;
    overflow: hidden;
  }

  .hero-banner__heading-line {
    display: block;
    opacity: 0;
    transform: translateY(100%);
    animation: heroReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s;
  }

  .hero-banner__subheading {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    max-width: 50ch;
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.6s;
  }

  .hero-banner__actions {
    margin-top: var(--space-md);
    opacity: 0;
    transform: translateY(20px);
    animation: heroFadeUp 0.8s ease forwards 0.8s;
  }

  .hero-banner__btn {
    background: #fff;
    color: var(--color-text);
    border: none;
    font-weight: 500;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-banner__btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .hero-banner__scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    animation: heroFadeUp 0.8s ease forwards 1.2s;
  }

  .hero-banner__scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes heroZoom {
    from { transform: scale(1.1); }
    to { transform: scale(1); }
  }

  @keyframes heroFadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes heroReveal {
    from {
      opacity: 0;
      transform: translateY(100%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scrollPulse {
    0%, 100% {
      opacity: 0.5;
      transform: scaleY(1);
    }
    50% {
      opacity: 1;
      transform: scaleY(1.2);
    }
  }

  @media (min-width: 768px) {
    .hero-banner {
      min-height: var(--hero-min-height-desktop);
      margin-top: calc(-1 * var(--header-height-desktop));
      padding-top: var(--header-height-desktop);
    }

    .hero-banner__content {
      padding: var(--space-4xl) var(--page-margin);
    }

    .hero-banner__text {
      gap: var(--space-lg);
    }

    .hero-banner__eyebrow {
      font-size: var(--font-size-sm);
    }

    .hero-banner__subheading {
      font-size: var(--font-size-xl);
    }

    .hero-banner__actions {
      margin-top: var(--space-lg);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.hero_banner.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.hero_banner.content_header"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "t:sections.hero_banner.eyebrow",
      "default": "Welcome"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "t:sections.hero_banner.heading",
      "default": "Discover something extraordinary"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "t:sections.hero_banner.subheading",
      "default": "Experience the perfect blend of quality and craftsmanship in every product we create."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.hero_banner.button_text",
      "default": "Explore now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:sections.hero_banner.button_url",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.hero_banner.background_image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "t:sections.hero_banner.overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 40,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "t:sections.hero_banner.layout_header"
    },
    {
      "type": "range",
      "id": "min_height_desktop",
      "label": "t:sections.hero_banner.min_height_desktop",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "vh"
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "label": "t:sections.hero_banner.min_height_mobile",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 90,
      "unit": "vh"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.hero_banner.text_alignment",
      "options": [
        { "value": "left", "label": "t:sections.hero_banner.align_left" },
