<header
  class="header {% if section.settings.enable_sticky %}header--sticky{% endif %}"
  style="
    --header-height-desktop: {{ section.settings.header_height_desktop }}px;
    --header-height-mobile: {{ section.settings.header_height_mobile }}px;
  "
  data-header
>
  <div class="header__inner">
    {%- comment -%} Mobile: Left side - Menu toggle {%- endcomment -%}
    <div class="header__mobile-left">
      <button
        class="header__menu-toggle"
        aria-label="{{ 'general.menu' | t }}"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="header__menu-icon">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
    </div>

    {%- comment -%} Logo - Centered on mobile, left on desktop {%- endcomment -%}
    <a href="{{ routes.root_url }}" class="header__logo">
      {% if settings.logo %}
        {{ settings.logo | image_url: width: settings.logo_width | image_tag: alt: shop.name, class: 'header__logo-image' }}
      {% else %}
        <span class="header__logo-text">{{ shop.name }}</span>
      {% endif %}
    </a>

    {%- comment -%} Desktop: Navigation {%- endcomment -%}
    <nav class="header__nav" id="header-nav" aria-label="{{ 'general.navigation' | t }}">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="header__nav-link {% if link.active %}header__nav-link--active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    {%- comment -%} Actions - Right side {%- endcomment -%}
    <div class="header__actions">
      {% if section.settings.show_account %}
        <a href="{{ routes.account_url }}" class="header__icon-btn header__icon-btn--desktop" aria-label="{{ 'general.account' | t }}">
          {{ 'icon-account.svg' | inline_asset_content }}
        </a>
      {% endif %}

      {% if section.settings.show_cart %}
        <a href="{{ routes.cart_url }}" class="header__icon-btn header__cart" aria-label="{{ 'general.cart' | t }}">
          {{ 'icon-cart.svg' | inline_asset_content }}
          {% if cart.item_count > 0 %}
            <span class="header__cart-count">{{ cart.item_count }}</span>
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>

  <div class="header__mobile-menu" id="mobile-menu" aria-hidden="true">
    <nav class="header__mobile-nav">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="header__mobile-link {% if link.active %}header__mobile-link--active{% endif %}">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    {% if section.settings.show_account %}
      <div class="header__mobile-footer">
        <a href="{{ routes.account_url }}" class="header__mobile-account">
          <span class="header__mobile-account-icon">
            {{ 'icon-account.svg' | inline_asset_content }}
          </span>
          <span>{{ 'general.account' | t }}</span>
        </a>
      </div>
    {% endif %}
  </div>
</header>

{% javascript %}
  const menuToggle = document.querySelector('.header__menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.querySelector('[data-header]');

  // Mobile menu toggle
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', !isOpen);
      mobileMenu.setAttribute('aria-hidden', isOpen);
      document.body.style.overflow = isOpen ? '' : 'hidden';
    });
  }

  // Transparent header scroll effect
  if (header) {
    const heroBanner = document.querySelector('[data-hero-banner]');

    if (heroBanner) {
      const updateHeaderTransparency = () => {
        const scrollY = window.scrollY;
        const heroHeight = heroBanner.offsetHeight;
        const headerHeight = header.offsetHeight;
        const transitionStart = 0;
        const transitionEnd = heroHeight - headerHeight;

        let progress = 0;
        if (scrollY > transitionStart) {
          progress = Math.min((scrollY - transitionStart) / (transitionEnd - transitionStart), 1);
        }

        // Apply eased progress for smoother animation
        const easedProgress = progress < 0.5
          ? 4 * progress * progress * progress
          : 1 - Math.pow(-2 * progress + 2, 3) / 2;

        header.style.setProperty('--header-bg-opacity', easedProgress);
        header.style.setProperty('--header-border-opacity', easedProgress);

        if (progress > 0.5) {
          header.classList.remove('header--transparent');
        } else {
          header.classList.add('header--transparent');
        }
      };

      // Initial state
      header.classList.add('header--transparent');
      updateHeaderTransparency();

      // Throttled scroll handler
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            updateHeaderTransparency();
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
    }
  }
{% endjavascript %}

{% stylesheet %}
  .header {
    position: relative;
    z-index: 100;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .header--sticky {
    position: sticky;
    top: 0;
  }

  .header--transparent {
    background-color: transparent;
    border-bottom-color: transparent;
  }

  .header--transparent .header__logo-text,
  .header--transparent .header__nav-link,
  .header--transparent .header__icon-btn {
    color: var(--color-primary-text);
  }

  .header--transparent .header__menu-icon span {
    background-color: var(--color-primary-text);
  }

  .header--transparent .header__nav-link::after {
    background-color: var(--color-primary-text);
  }

  .header__inner {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    height: var(--header-height-mobile);
    padding: 0 var(--space-sm);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .header__mobile-left {
    display: flex;
    justify-content: flex-start;
  }

  .header__logo {
    text-decoration: none;
    color: var(--color-foreground);
    flex-shrink: 0;
    transition: color 0.3s ease;
    justify-self: center;
  }

  .header__logo-text {
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 1.25rem;
    letter-spacing: -0.03em;
  }

  .header__logo-image {
    height: auto;
    width: auto;
    max-height: 2rem;
    max-width: 80px;
  }

  .header__nav {
    display: none;
    align-items: center;
    gap: var(--space-lg);
  }

  .header__icon-btn--desktop {
    display: none;
  }

  .header__nav-link {
    font-size: 0.875rem;
    font-weight: 450;
    color: var(--color-foreground);
    text-decoration: none;
    padding: var(--space-sm) 0;
    position: relative;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .header__nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1.5px;
    background-color: var(--color-primary);
    transition: width var(--transition-base);
  }

  .header__nav-link:hover::after,
  .header__nav-link--active::after {
    width: 100%;
  }

  .header__actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0;
  }

  .header__icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--color-foreground);
    text-decoration: none;
    border-radius: 50%;
    transition: color 0.3s ease, background-color 0.2s ease;
  }

  .header__icon-btn:hover {
    background-color: var(--color-secondary);
  }

  .header--transparent .header__icon-btn:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }

  .header__icon-btn svg {
    width: 1.125rem;
    height: 1.125rem;
  }

  .header__cart {
    position: relative;
  }

  .header__cart-count {
    position: absolute;
    top: -2px;
    right: -2px;
    background-color: var(--color-primary);
    color: var(--color-primary-text);
    font-size: 0.5rem;
    font-weight: 600;
    min-width: 0.875rem;
    height: 0.875rem;
    padding: 0 0.2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header__menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .header__menu-icon {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 1.25rem;
  }

  .header__menu-icon span {
    display: block;
    height: 1.5px;
    width: 100%;
    background-color: var(--color-foreground);
    transition: all var(--transition-base);
    transform-origin: center;
  }

  .header__menu-toggle[aria-expanded="true"] .header__menu-icon span:nth-child(1) {
    transform: translateY(6.5px) rotate(45deg);
  }

  .header__menu-toggle[aria-expanded="true"] .header__menu-icon span:nth-child(2) {
    opacity: 0;
  }

  .header__menu-toggle[aria-expanded="true"] .header__menu-icon span:nth-child(3) {
    transform: translateY(-6.5px) rotate(-45deg);
  }

  .header__mobile-menu {
    display: none;
    position: fixed;
    top: var(--header-height-mobile);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-background);
    padding: var(--space-xl) var(--page-margin);
    overflow-y: auto;
    z-index: 99;
  }

  .header__mobile-menu[aria-hidden="false"] {
    display: block;
    animation: fadeIn var(--transition-base) ease;
  }

  .header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .header__mobile-link {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-foreground);
    text-decoration: none;
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--color-secondary);
    transition: color var(--transition-fast);
  }

  .header__mobile-link:hover,
  .header__mobile-link--active {
    color: var(--color-primary);
  }

  .header__mobile-footer {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-lg) var(--page-margin);
    border-top: 1px solid var(--color-border);
    background-color: var(--color-background);
  }

  .header__mobile-account {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: var(--space-sm) 0;
    transition: color var(--transition-fast);
  }

  .header__mobile-account:hover {
    color: var(--color-primary);
  }

  .header__mobile-account-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
  }

  .header__mobile-account-icon svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (min-width: 768px) {
    .header__inner {
      display: flex;
      grid-template-columns: unset;
      height: var(--header-height-desktop);
      padding: 0 var(--page-margin);
      gap: var(--space-xl);
    }

    .header__mobile-left {
      display: none;
    }

    .header__logo {
      justify-self: unset;
    }

    .header__logo-image {
      max-height: 2.5rem;
      max-width: 100px;
    }

    .header__nav {
      display: flex;
      flex: 1;
    }

    .header__actions {
      gap: var(--space-xs);
    }

    .header__icon-btn {
      width: 2.5rem;
      height: 2.5rem;
    }

    .header__icon-btn svg {
      width: 1.25rem;
      height: 1.25rem;
    }

    .header__icon-btn--desktop {
      display: flex;
    }

    .header__cart-count {
      top: 2px;
      right: 2px;
      font-size: 0.625rem;
      min-width: 1rem;
      height: 1rem;
    }

    .header__menu-toggle {
      display: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.header.name",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:settings.header.menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_account",
      "label": "t:settings.header.show_account",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "t:settings.header.show_cart",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "t:settings.header.enable_sticky",
      "default": true
    },
    {
      "type": "header",
      "content": "t:settings.header.desktop_layout"
    },
    {
      "type": "range",
      "id": "header_height_desktop",
      "min": 60,
      "max": 120,
      "step": 4,
      "default": 72,
      "unit": "px",
      "label": "t:settings.header.header_height"
    },
    {
      "type": "header",
      "content": "t:settings.header.mobile_layout"
    },
    {
      "type": "range",
      "id": "header_height_mobile",
      "min": 56,
      "max": 80,
      "step": 4,
      "default": 64,
      "unit": "px",
      "label": "t:settings.header.header_height"
    }
  ]
}
{% endschema %}
