<section class="image-with-text {% if section.settings.image_position == 'right' %}image-with-text--reversed{% endif %}">
  <div class="image-with-text__image">
    {% if section.settings.image %}
      {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  </div>

  <div class="image-with-text__content">
    {% if section.settings.eyebrow != blank %}
      <p class="image-with-text__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="image-with-text__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="image-with-text__text text-muted">{{ section.settings.text }}</div>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url }}" class="btn btn--{{ section.settings.button_style }}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .image-with-text {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
    padding: var(--space-3xl) var(--page-margin);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  .image-with-text__image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: var(--input-border-radius);
    background-color: var(--color-secondary);
  }

  .image-with-text__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-with-text__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-md);
  }

  .image-with-text__eyebrow {
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin: 0;
  }

  .image-with-text__heading {
    margin: 0;
  }

  .image-with-text__text {
    line-height: 1.7;
  }

  .image-with-text__text p:last-child {
    margin-bottom: 0;
  }

  .image-with-text .btn {
    align-self: flex-start;
    margin-top: var(--space-sm);
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
    fill: var(--color-text-muted);
    opacity: 0.3;
  }

  @media (min-width: 768px) {
    .image-with-text {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-4xl);
    }

    .image-with-text--reversed .image-with-text__image {
      order: 2;
    }

    .image-with-text--reversed .image-with-text__content {
      order: 1;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.image_with_text.name",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image_with_text.image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "t:sections.image_with_text.image_position",
      "options": [
        { "value": "left", "label": "t:sections.image_with_text.position_left" },
        { "value": "right", "label": "t:sections.image_with_text.position_right" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:sections.image_with_text.content_header"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "t:sections.image_with_text.eyebrow"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.image_with_text.heading",
      "default": "Image with text"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.image_with_text.text",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post.</p>"
    },
    {
      "type": "header",
      "content": "t:sections.image_with_text.button_header"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:sections.image_with_text.button_text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "t:sections.image_with_text.button_url"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "t:sections.image_with_text.button_style",
      "options": [
        { "value": "primary", "label": "t:sections.image_with_text.button_primary" },
        { "value": "secondary", "label": "t:sections.image_with_text.button_secondary" },
        { "value": "outline", "label": "t:sections.image_with_text.button_outline" }
      ],
      "default": "primary"
    }
  ],
  "presets": [
    {
      "name": "t:sections.image_with_text.name"
    }
  ]
}
{% endschema %}
