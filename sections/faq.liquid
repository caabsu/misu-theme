<section class="faq full-width" data-faq-section>
  {%- comment -%} Hero area with background image {%- endcomment -%}
  <div class="faq__hero">
    {% if section.settings.hero_image %}
      <div class="faq__hero-image">
        {{ section.settings.hero_image | image_url: width: 1920 | image_tag: loading: 'eager' }}
      </div>
    {% endif %}
    <div class="faq__hero-gradient"></div>
    <div class="faq__hero-content">
      <header class="faq__header">
        {% if section.settings.eyebrow != blank %}
          <p class="faq__eyebrow">{{ section.settings.eyebrow }}</p>
        {% endif %}
        <h1 class="faq__title">
          <span class="faq__title-primary">{{ section.settings.title }}</span>
          {% if section.settings.title2 != blank %}
            <span class="faq__title-secondary">{{ section.settings.title2 }}</span>
          {% endif %}
        </h1>
        {% if section.settings.subtitle != blank %}
          <p class="faq__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>

      {%- comment -%} Quick Actions {%- endcomment -%}
      {% if section.settings.show_quick_actions %}
        <div class="faq__actions">
          <a href="{{ section.settings.action_1_url }}" class="faq__action-main">
            <svg class="faq__action-main-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 2l4 4-4 4"/>
              <path d="M3 11v-1a4 4 0 0 1 4-4h14"/>
              <path d="M7 22l-4-4 4-4"/>
              <path d="M21 13v1a4 4 0 0 1-4 4H3"/>
            </svg>
            <span class="faq__action-main-text">
              <span class="faq__action-main-sub">{{ section.settings.action_1_sub }}</span>
              <span class="faq__action-main-title">{{ section.settings.action_1_text }}</span>
            </span>
          </a>
          <div class="faq__action-stack">
            <a href="{{ section.settings.action_2_url }}" class="faq__action-mini faq__action-mini--1">
              <span class="faq__action-mini-text">{{ section.settings.action_2_text }}</span>
              <svg class="faq__action-mini-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
            <a href="{{ section.settings.action_3_url }}" class="faq__action-mini faq__action-mini--2">
              <span class="faq__action-mini-text">{{ section.settings.action_3_text }}</span>
              <svg class="faq__action-mini-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      {% endif %}

      {%- comment -%} Search {%- endcomment -%}
      <div class="faq__search">
        <div class="faq__search-wrap">
          <svg class="faq__search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input
            type="text"
            class="faq__search-input"
            placeholder="{{ section.settings.search_placeholder }}"
            data-faq-search
          >
        </div>
      </div>
    </div>
  </div>

  <div class="faq__inner">

    {%- comment -%} FAQ Categories {%- endcomment -%}
    <div class="faq__content">
      {%- assign categories = section.settings.categories | split: ',' -%}
      {%- for category in categories -%}
        {%- assign category_handle = category | strip | handleize -%}
        {%- assign category_name = category | strip -%}
        <div class="faq__category" data-faq-category="{{ category_handle }}">
          <h2 class="faq__category-title">{{ category_name }}</h2>
          <div class="faq__list">
            {%- for block in section.blocks -%}
              {%- assign block_category = block.settings.category | handleize -%}
              {%- if block_category == category_handle -%}
                <div class="faq__item" data-faq-item {{ block.shopify_attributes }}>
                  <button class="faq__question" data-faq-toggle aria-expanded="false">
                    <span class="faq__question-text">{{ block.settings.question }}</span>
                    <span class="faq__question-icon">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 5v14M5 12h14"/>
                      </svg>
                    </span>
                  </button>
                  <div class="faq__answer" data-faq-answer>
                    <div class="faq__answer-inner">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}

      {%- comment -%} No results message {%- endcomment -%}
      <p class="faq__no-results" data-faq-no-results>{{ section.settings.no_results_text }}</p>
    </div>
  </div>
</section>

{% javascript %}
  function initFAQ() {
    const section = document.querySelector('[data-faq-section]');
    if (!section) return;

    const searchInput = section.querySelector('[data-faq-search]');
    const items = section.querySelectorAll('[data-faq-item]');
    const categories = section.querySelectorAll('[data-faq-category]');
    const noResults = section.querySelector('[data-faq-no-results]');
    const toggles = section.querySelectorAll('[data-faq-toggle]');

    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const item = toggle.closest('[data-faq-item]');
        const isOpen = toggle.getAttribute('aria-expanded') === 'true';

        toggles.forEach(otherToggle => {
          if (otherToggle !== toggle) {
            otherToggle.setAttribute('aria-expanded', 'false');
            otherToggle.closest('[data-faq-item]').classList.remove('faq__item--open');
          }
        });

        toggle.setAttribute('aria-expanded', !isOpen);
        item.classList.toggle('faq__item--open', !isOpen);
      });
    });

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase().trim();
        let visibleCount = 0;

        items.forEach(item => {
          const question = item.querySelector('.faq__question-text').textContent.toLowerCase();
          const answer = item.querySelector('.faq__answer-inner').textContent.toLowerCase();
          const matches = question.includes(query) || answer.includes(query);

          item.style.display = matches ? '' : 'none';
          if (matches) visibleCount++;
        });

        categories.forEach(category => {
          const visibleItems = category.querySelectorAll('[data-faq-item]:not([style*="display: none"])');
          category.style.display = visibleItems.length > 0 ? '' : 'none';
        });

        noResults.style.display = visibleCount === 0 && query.length > 0 ? '' : 'none';
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFAQ);
  } else {
    initFAQ();
  }
{% endjavascript %}

{% stylesheet %}
  .faq {
    background-color: var(--faq-bg);
    min-height: 100vh;
    margin-top: calc(-1 * var(--header-height));
    padding-top: var(--header-height);
  }

  .faq__hero {
    position: relative;
    padding: var(--faq-padding-top) var(--page-margin) var(--space-2xl);
    overflow: hidden;
  }

  .faq__hero-image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .faq__hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: var(--faq-hero-opacity);
  }

  .faq__hero-gradient {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 40%,
      var(--faq-bg) 100%
    );
    pointer-events: none;
  }

  .faq__hero-content {
    position: relative;
    z-index: 2;
    max-width: 720px;
    margin: 0 auto;
  }

  .faq__inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 var(--page-margin) var(--space-4xl);
  }

  .faq__header {
    margin-bottom: var(--space-lg);
    text-align: left;
  }

  .faq__eyebrow {
    font-family: var(--font-body-family);
    font-size: var(--faq-eyebrow-size);
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--faq-eyebrow-color);
    margin: 0 0 var(--space-xs);
  }

  .faq__title {
    font-family: var(--font-heading-family);
    margin: 0 0 var(--space-sm);
    line-height: 1.2;
  }

  .faq__title-primary {
    font-size: var(--faq-title-size);
    font-weight: var(--faq-title-weight);
    color: var(--faq-title-color);
  }

  .faq__title-secondary {
    font-size: var(--faq-title2-size);
    font-weight: var(--faq-title2-weight);
    color: var(--faq-title2-color);
    margin-left: 0.25em;
  }

  .faq__subtitle {
    font-size: 0.9375rem;
    color: var(--faq-subtitle-color);
    margin: 0;
    line-height: 1.5;
  }

  .faq__actions {
    display: flex;
    align-items: stretch;
    gap: 0.5rem;
    margin-bottom: var(--space-xl);
    max-width: 480px;
  }

  /* Main subscription button - fills remaining width, ~4:3 ratio */
  .faq__action-main {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    flex: 1;
    aspect-ratio: 2 / 1;
    padding: var(--faq-main-padding);
    background: var(--faq-main-bg);
    border-radius: 12px;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .faq__action-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .faq__action-main-icon {
    position: absolute;
    top: var(--faq-main-padding);
    right: var(--faq-main-padding);
    width: 24px;
    height: 24px;
    color: var(--faq-main-icon-color);
    transition: transform 0.2s ease;
  }

  .faq__action-main:hover .faq__action-main-icon {
    transform: scale(1.1) rotate(-5deg);
  }

  .faq__action-main-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .faq__action-main-sub {
    font-family: var(--font-body-family);
    font-size: var(--faq-main-sub-size);
    font-weight: var(--faq-main-sub-weight);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--faq-main-sub);
  }

  .faq__action-main-title {
    font-family: var(--font-body-family);
    font-size: var(--faq-main-title-size);
    font-weight: var(--faq-main-title-weight);
    color: var(--faq-main-text);
  }

  /* Stacked mini buttons - stretches to match main button height */
  .faq__action-stack {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 160px;
    flex-shrink: 0;
  }

  .faq__action-mini {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 0.75rem;
    border-radius: 6px;
    text-decoration: none;
    transition: transform 0.15s ease;
  }

  .faq__action-mini:hover {
    transform: translateX(2px);
  }

  .faq__action-mini:hover .faq__action-mini-arrow {
    transform: translateX(3px);
  }

  .faq__action-mini-text {
    font-family: var(--font-body-family);
    font-size: var(--faq-mini-text-size);
    font-weight: var(--faq-mini-text-weight);
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  .faq__action-mini-arrow {
    width: 12px;
    height: 12px;
    flex-shrink: 0;
    opacity: 0.5;
    transition: transform 0.15s ease, opacity 0.15s ease;
  }

  .faq__action-mini:hover .faq__action-mini-arrow {
    opacity: 1;
  }

  .faq__action-mini--1 {
    background: var(--faq-mini1-bg);
  }
  .faq__action-mini--1 .faq__action-mini-text,
  .faq__action-mini--1 .faq__action-mini-arrow {
    color: var(--faq-mini1-text);
  }

  .faq__action-mini--2 {
    background: var(--faq-mini2-bg);
  }
  .faq__action-mini--2 .faq__action-mini-text,
  .faq__action-mini--2 .faq__action-mini-arrow {
    color: var(--faq-mini2-text);
  }

  @media (max-width: 480px) {
    .faq__action-stack {
      width: 120px;
    }

    .faq__action-mini {
      padding: 0 0.5rem;
    }

    .faq__action-mini-text {
      font-size: 0.5rem;
    }
  }

  .faq__search {
    max-width: 480px;
  }

  .faq__search-wrap {
    position: relative;
  }

  .faq__search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
    color: var(--faq-search-text);
    opacity: 0.4;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .faq__search-wrap:focus-within .faq__search-icon {
    opacity: 0.7;
  }

  .faq__search-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 2.875rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--faq-search-text);
    background: var(--faq-search-bg);
    border: 1px solid var(--faq-search-border);
    border-radius: 8px;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .faq__search-input::placeholder {
    color: var(--faq-search-text);
    opacity: 0.5;
  }

  .faq__search-input:focus {
    border-color: var(--faq-accent-color);
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.04);
  }

  .faq__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .faq__category {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .faq__category-title {
    font-family: var(--font-body-family);
    font-size: var(--faq-category-size);
    font-weight: var(--faq-category-weight);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--faq-category-color);
    margin: 0 0 var(--space-xs);
  }

  .faq__list {
    display: flex;
    flex-direction: column;
  }

  .faq__item {
    border-bottom: 1px solid var(--faq-border-color);
  }

  .faq__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
    width: 100%;
    padding: var(--space-md) 0;
    font-family: var(--font-body-family);
    font-size: var(--faq-question-size);
    font-weight: var(--faq-question-weight);
    color: var(--faq-question-color);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: color 0.2s ease;
    line-height: 1.4;
  }

  .faq__question:hover {
    color: var(--faq-accent-color);
  }

  .faq__question-text {
    flex: 1;
  }

  .faq__question-icon {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    color: var(--faq-category-color);
    transition: transform 0.3s ease;
  }

  .faq__item--open .faq__question-icon {
    transform: rotate(45deg);
    color: var(--faq-accent-color);
  }

  .faq__answer {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease;
  }

  .faq__item--open .faq__answer {
    grid-template-rows: 1fr;
  }

  .faq__answer-inner {
    overflow: hidden;
    font-size: var(--faq-answer-size);
    line-height: 1.7;
    color: var(--faq-answer-color);
  }

  .faq__item--open .faq__answer-inner {
    padding-bottom: var(--space-lg);
  }

  .faq__no-results {
    display: none;
    text-align: left;
    font-size: 0.875rem;
    color: var(--faq-answer-color);
    padding: var(--space-xl) 0;
  }

  @media (min-width: 768px) {
    .faq__inner {
      padding: var(--space-5xl) var(--page-margin);
    }

    .faq__search-wrap {
      max-width: 400px;
    }
  }
{% endstylesheet %}

