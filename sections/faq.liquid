{% style %}
  .faq {
    --faq-bg: {{ section.settings.background_color }};
    --faq-title-color: {{ section.settings.title_color }};
    --faq-title-size: {{ section.settings.title_size }}px;
    --faq-title-weight: {{ section.settings.title_weight }};
    --faq-subtitle-color: {{ section.settings.subtitle_color }};
    --faq-category-color: {{ section.settings.category_color }};
    --faq-category-size: {{ section.settings.category_size }}px;
    --faq-category-weight: {{ section.settings.category_weight }};
    --faq-question-color: {{ section.settings.question_color }};
    --faq-question-size: {{ section.settings.question_size }}px;
    --faq-question-weight: {{ section.settings.question_weight }};
    --faq-answer-color: {{ section.settings.answer_color }};
    --faq-answer-size: {{ section.settings.answer_size }}px;
    --faq-border-color: {{ section.settings.border_color }};
    --faq-accent-color: {{ section.settings.accent_color }};
    --faq-search-bg: {{ section.settings.search_bg }};
    --faq-search-text: {{ section.settings.search_text }};
    --faq-search-border: {{ section.settings.search_border }};
    --faq-padding-top: {{ section.settings.padding_top }}px;
    --faq-hero-opacity: {{ section.settings.hero_opacity | divided_by: 100.0 }};
  }
{% endstyle %}

<section class="faq full-width" data-faq-section>
  {%- comment -%} Hero area with background image {%- endcomment -%}
  <div class="faq__hero">
    {% if section.settings.hero_image %}
      <div class="faq__hero-image">
        {{ section.settings.hero_image | image_url: width: 1920 | image_tag: loading: 'eager' }}
      </div>
    {% endif %}
    <div class="faq__hero-gradient"></div>
    <div class="faq__hero-content">
      <header class="faq__header">
        <h1 class="faq__title">{{ section.settings.title }}</h1>
        {% if section.settings.subtitle != blank %}
          <p class="faq__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>

      {%- comment -%} Search {%- endcomment -%}
      <div class="faq__search">
        <div class="faq__search-wrap">
          <svg class="faq__search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          <input
            type="text"
            class="faq__search-input"
            placeholder="{{ section.settings.search_placeholder }}"
            data-faq-search
          >
        </div>
      </div>
    </div>
  </div>

  <div class="faq__inner">

    {%- comment -%} FAQ Categories {%- endcomment -%}
    <div class="faq__content">
      {%- assign categories = section.settings.categories | split: ',' -%}
      {%- for category in categories -%}
        {%- assign category_handle = category | strip | handleize -%}
        {%- assign category_name = category | strip -%}
        <div class="faq__category" data-faq-category="{{ category_handle }}">
          <h2 class="faq__category-title">{{ category_name }}</h2>
          <div class="faq__list">
            {%- for block in section.blocks -%}
              {%- assign block_category = block.settings.category | handleize -%}
              {%- if block_category == category_handle -%}
                <div class="faq__item" data-faq-item {{ block.shopify_attributes }}>
                  <button class="faq__question" data-faq-toggle aria-expanded="false">
                    <span class="faq__question-text">{{ block.settings.question }}</span>
                    <span class="faq__question-icon">
                      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 5v14M5 12h14"/>
                      </svg>
                    </span>
                  </button>
                  <div class="faq__answer" data-faq-answer>
                    <div class="faq__answer-inner">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endfor -%}

      {%- comment -%} No results message {%- endcomment -%}
      <p class="faq__no-results" data-faq-no-results>{{ section.settings.no_results_text }}</p>
    </div>
  </div>
</section>

{% javascript %}
  function initFAQ() {
    const section = document.querySelector('[data-faq-section]');
    if (!section) return;

    const searchInput = section.querySelector('[data-faq-search]');
    const items = section.querySelectorAll('[data-faq-item]');
    const categories = section.querySelectorAll('[data-faq-category]');
    const noResults = section.querySelector('[data-faq-no-results]');
    const toggles = section.querySelectorAll('[data-faq-toggle]');

    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const item = toggle.closest('[data-faq-item]');
        const isOpen = toggle.getAttribute('aria-expanded') === 'true';

        toggles.forEach(otherToggle => {
          if (otherToggle !== toggle) {
            otherToggle.setAttribute('aria-expanded', 'false');
            otherToggle.closest('[data-faq-item]').classList.remove('faq__item--open');
          }
        });

        toggle.setAttribute('aria-expanded', !isOpen);
        item.classList.toggle('faq__item--open', !isOpen);
      });
    });

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase().trim();
        let visibleCount = 0;

        items.forEach(item => {
          const question = item.querySelector('.faq__question-text').textContent.toLowerCase();
          const answer = item.querySelector('.faq__answer-inner').textContent.toLowerCase();
          const matches = question.includes(query) || answer.includes(query);

          item.style.display = matches ? '' : 'none';
          if (matches) visibleCount++;
        });

        categories.forEach(category => {
          const visibleItems = category.querySelectorAll('[data-faq-item]:not([style*="display: none"])');
          category.style.display = visibleItems.length > 0 ? '' : 'none';
        });

        noResults.style.display = visibleCount === 0 && query.length > 0 ? '' : 'none';
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFAQ);
  } else {
    initFAQ();
  }
{% endjavascript %}

{% stylesheet %}
  .faq {
    background-color: var(--faq-bg);
    min-height: 100vh;
  }

  .faq__hero {
    position: relative;
    padding: var(--faq-padding-top) var(--page-margin) var(--space-2xl);
    overflow: hidden;
  }

  .faq__hero-image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .faq__hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: var(--faq-hero-opacity);
  }

  .faq__hero-gradient {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 40%,
      var(--faq-bg) 100%
    );
    pointer-events: none;
  }

  .faq__hero-content {
    position: relative;
    z-index: 2;
    max-width: 720px;
    margin: 0 auto;
  }

  .faq__inner {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 var(--page-margin) var(--space-4xl);
  }

  .faq__header {
    margin-bottom: var(--space-xl);
  }

  .faq__title {
    font-family: var(--font-heading-family);
    font-size: var(--faq-title-size);
    font-weight: var(--faq-title-weight);
    color: var(--faq-title-color);
    margin: 0 0 var(--space-sm);
    line-height: 1.2;
  }

  .faq__subtitle {
    font-size: 0.9375rem;
    color: var(--faq-subtitle-color);
    margin: 0;
    line-height: 1.5;
  }

  .faq__search {
    margin-bottom: 0;
  }

  .faq__search-wrap {
    position: relative;
    max-width: 100%;
  }

  .faq__search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--faq-search-text);
    opacity: 0.5;
    pointer-events: none;
  }

  .faq__search-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 2.75rem;
    font-family: var(--font-body-family);
    font-size: 0.875rem;
    color: var(--faq-search-text);
    background: var(--faq-search-bg);
    border: 1px solid var(--faq-search-border);
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .faq__search-input::placeholder {
    color: var(--faq-search-text);
    opacity: 0.5;
  }

  .faq__search-input:focus {
    border-color: var(--faq-accent-color);
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
  }

  .faq__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .faq__category {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .faq__category-title {
    font-family: var(--font-body-family);
    font-size: var(--faq-category-size);
    font-weight: var(--faq-category-weight);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--faq-category-color);
    margin: 0 0 var(--space-xs);
  }

  .faq__list {
    display: flex;
    flex-direction: column;
  }

  .faq__item {
    border-bottom: 1px solid var(--faq-border-color);
  }

  .faq__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
    width: 100%;
    padding: var(--space-md) 0;
    font-family: var(--font-body-family);
    font-size: var(--faq-question-size);
    font-weight: var(--faq-question-weight);
    color: var(--faq-question-color);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: color 0.2s ease;
    line-height: 1.4;
  }

  .faq__question:hover {
    color: var(--faq-accent-color);
  }

  .faq__question-text {
    flex: 1;
  }

  .faq__question-icon {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    color: var(--faq-category-color);
    transition: transform 0.3s ease;
  }

  .faq__item--open .faq__question-icon {
    transform: rotate(45deg);
    color: var(--faq-accent-color);
  }

  .faq__answer {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease;
  }

  .faq__item--open .faq__answer {
    grid-template-rows: 1fr;
  }

  .faq__answer-inner {
    overflow: hidden;
    font-size: var(--faq-answer-size);
    line-height: 1.7;
    color: var(--faq-answer-color);
  }

  .faq__item--open .faq__answer-inner {
    padding-bottom: var(--space-lg);
  }

  .faq__no-results {
    display: none;
    text-align: left;
    font-size: 0.875rem;
    color: var(--faq-answer-color);
    padding: var(--space-xl) 0;
  }

  @media (min-width: 768px) {
    .faq__inner {
      padding: var(--space-5xl) var(--page-margin);
    }

    .faq__search-wrap {
      max-width: 400px;
    }
  }
{% endstylesheet %}

