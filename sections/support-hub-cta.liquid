{% style %}
  .support-cta {
    /* Section padding */
    --scta-section-pt-mobile: {{ section.settings.section_padding_top_mobile }}px;
    --scta-section-pb-mobile: {{ section.settings.section_padding_bottom_mobile }}px;
    --scta-section-pt-desktop: {{ section.settings.section_padding_top_desktop }}px;
    --scta-section-pb-desktop: {{ section.settings.section_padding_bottom_desktop }}px;
    --scta-margin-x: {{ section.settings.section_margin_x }}px;

    /* Card styling */
    --scta-bg: {{ section.settings.background_color }};
    --scta-radius: {{ section.settings.border_radius }}px;
    --scta-padding-x: {{ section.settings.padding_x }}px;
    --scta-padding-y: {{ section.settings.padding_y }}px;
    --scta-image-opacity: {{ section.settings.image_opacity | divided_by: 100.0 }};

    /* Mobile typography */
    --scta-header-color-mobile: {{ section.settings.header_color_mobile }};
    --scta-header-size-mobile: {{ section.settings.header_size_mobile }}px;
    --scta-header-weight-mobile: {{ section.settings.header_weight_mobile }};
    --scta-subheader-color-mobile: {{ section.settings.subheader_color_mobile }};
    --scta-subheader-size-mobile: {{ section.settings.subheader_size_mobile }}px;

    /* Desktop typography */
    --scta-title-color-desktop: {{ section.settings.title_color_desktop }};
    --scta-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --scta-title-weight-desktop: {{ section.settings.title_weight_desktop }};
    --scta-body-color-desktop: {{ section.settings.body_color_desktop }};
    --scta-body-size-desktop: {{ section.settings.body_size_desktop }}px;

    /* Mobile icon */
    --scta-icon-color: {{ section.settings.icon_color }};
    --scta-icon-size: {{ section.settings.icon_size }}px;

    /* Desktop dot & divider */
    --scta-dot-color: {{ section.settings.dot_color }};
    --scta-dot-size: {{ section.settings.dot_size }}px;
    --scta-dot-gap: {{ section.settings.dot_gap }}px;
    --scta-divider-color: {{ section.settings.divider_color }};

    /* Buttons */
    --scta-btn-desktop-padding: {{ section.settings.btn_desktop_padding }}px;
    --scta-btn-edge-gap: {{ section.settings.btn_desktop_edge_gap }}px;
    --scta-btn-primary-bg: {{ section.settings.btn_primary_bg }};
    --scta-btn-primary-text: {{ section.settings.btn_primary_text_color }};
    --scta-btn-secondary-bg: {{ section.settings.btn_secondary_bg }};
    --scta-btn-secondary-text: {{ section.settings.btn_secondary_text_color }};
    --scta-btn-secondary-border: {{ section.settings.btn_secondary_border }};
    --scta-btn-radius-mobile: {{ section.settings.btn_radius_mobile }}px;
    --scta-radius-mobile: {{ section.settings.border_radius_mobile }}px;
  }
{% endstyle %}

<div class="support-cta">
  <div class="support-cta__card">
    {%- comment -%} Background image with fade {%- endcomment -%}
    {% if section.settings.background_image %}
      <div class="support-cta__bg-image">
        {{ section.settings.background_image | image_url: width: 1200 | image_tag: loading: 'lazy' }}
      </div>
      <div class="support-cta__bg-fade"></div>
    {% endif %}

    {%- comment -%} Mobile Layout {%- endcomment -%}
    <div class="support-cta__mobile">
      {% if section.settings.icon_image %}
        <div class="support-cta__icon support-cta__icon--image">
          {{ section.settings.icon_image | image_url: width: 200 | image_tag: loading: 'lazy' }}
        </div>
      {% elsif section.settings.icon_style != 'none' %}
        <div class="support-cta__icon">
          {% case section.settings.icon_style %}
            {% when 'question' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
            {% when 'help' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
              </svg>
            {% when 'chat' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              </svg>
            {% when 'mail' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            {% when 'headphones' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
              </svg>
            {% when 'book' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
              </svg>
          {% endcase %}
        </div>
      {% endif %}
      <h2 class="support-cta__header">{{ section.settings.header }}</h2>
      <p class="support-cta__subheader">{{ section.settings.subheader }}</p>
      <div class="support-cta__buttons">
        <a href="{{ section.settings.hub_url }}" class="support-cta__btn support-cta__btn--primary">
          {{ section.settings.btn_primary_text }}
        </a>
        <a href="{{ section.settings.contact_url }}" class="support-cta__btn support-cta__btn--secondary">
          {{ section.settings.btn_secondary_text }}
        </a>
      </div>
    </div>

    {%- comment -%} Desktop Layout {%- endcomment -%}
    <div class="support-cta__desktop">
      <div class="support-cta__desktop-content">
        <div class="support-cta__left">
          <span class="support-cta__dot support-cta__dot--{{ section.settings.dot_style }}"></span>
          <span class="support-cta__title">{{ section.settings.desktop_title }}</span>
        </div>
        <span class="support-cta__divider support-cta__divider--{{ section.settings.divider_style }}"></span>
        <p class="support-cta__body">{{ section.settings.desktop_body }}</p>
        <a href="{{ section.settings.contact_url }}" class="support-cta__contact">
          {{ section.settings.btn_contact_text }}
        </a>
      </div>
      <div class="support-cta__open-wrapper">
        <a href="{{ section.settings.hub_url }}" class="support-cta__open">
          <span>{{ section.settings.btn_open_text }}</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .support-cta {
    padding: var(--scta-section-pt-mobile) var(--scta-margin-x) var(--scta-section-pb-mobile);
  }

  .support-cta__card {
    position: relative;
    background: var(--scta-bg);
    border-radius: var(--scta-radius-mobile);
    overflow: hidden;
  }

  /* Background image */
  .support-cta__bg-image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .support-cta__bg-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: var(--scta-image-opacity);
  }

  /* Mobile: vertical fade */
  .support-cta__bg-fade {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      transparent 30%,
      var(--scta-bg) 70%,
      var(--scta-bg) 100%
    );
    pointer-events: none;
  }

  /* Mobile Layout */
  .support-cta__mobile {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--scta-padding-y) var(--scta-padding-x);
  }

  .support-cta__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--scta-icon-size);
    height: var(--scta-icon-size);
    color: var(--scta-icon-color);
    margin-bottom: 1rem;
  }

  .support-cta__icon svg {
    width: 100%;
    height: 100%;
  }

  .support-cta__icon--image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .support-cta__header {
    font-family: var(--font-heading-family);
    font-size: var(--scta-header-size-mobile);
    font-weight: var(--scta-header-weight-mobile);
    color: var(--scta-header-color-mobile);
    margin: 0 0 0.5rem;
    line-height: 1.2;
  }

  .support-cta__subheader {
    font-family: var(--font-body-family);
    font-size: var(--scta-subheader-size-mobile);
    color: var(--scta-subheader-color-mobile);
    margin: 0 0 1.5rem;
    line-height: 1.5;
    max-width: 280px;
  }

  .support-cta__buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
    max-width: 280px;
  }

  .support-cta__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-body-family);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: var(--scta-btn-radius-mobile);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .support-cta__btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .support-cta__btn--primary {
    background: var(--scta-btn-primary-bg);
    color: var(--scta-btn-primary-text);
  }

  .support-cta__btn--secondary {
    background: var(--scta-btn-secondary-bg);
    color: var(--scta-btn-secondary-text);
    border: 1px solid var(--scta-btn-secondary-border);
  }

  /* Desktop Layout - hidden on mobile */
  .support-cta__desktop {
    display: none;
  }

  @media (min-width: 768px) {
    .support-cta {
      padding: var(--scta-section-pt-desktop) var(--scta-margin-x) var(--scta-section-pb-desktop);
    }

    .support-cta__card {
      border-radius: var(--scta-radius);
      position: relative;
    }

    .support-cta__mobile {
      display: none;
    }

    .support-cta__desktop {
      position: relative;
      z-index: 2;
      display: flex;
      align-items: center;
      padding: var(--scta-padding-y) var(--scta-padding-x);
    }

    .support-cta__desktop-content {
      display: flex;
      align-items: center;
      gap: 1.25rem;
      flex: 1;
      padding-right: 140px;
    }

    /* Desktop: horizontal fade from left */
    .support-cta__bg-fade {
      background: linear-gradient(
        to right,
        transparent 0%,
        transparent 40%,
        var(--scta-bg) 60%,
        var(--scta-bg) 100%
      );
    }

    .support-cta__bg-image {
      width: 60%;
      right: auto;
    }

    .support-cta__left {
      display: flex;
      align-items: center;
      gap: var(--scta-dot-gap);
      flex-shrink: 0;
      line-height: 1;
    }

    /* Dot styles */
    .support-cta__dot {
      flex-shrink: 0;
      align-self: center;
    }

    .support-cta__dot--solid {
      width: var(--scta-dot-size);
      height: var(--scta-dot-size);
      background: var(--scta-dot-color);
      border-radius: 50%;
    }

    .support-cta__dot--ring {
      width: var(--scta-dot-size);
      height: var(--scta-dot-size);
      border: 2px solid var(--scta-dot-color);
      border-radius: 50%;
      background: transparent;
    }

    .support-cta__dot--square {
      width: var(--scta-dot-size);
      height: var(--scta-dot-size);
      background: var(--scta-dot-color);
      border-radius: 2px;
    }

    .support-cta__dot--dash {
      width: calc(var(--scta-dot-size) * 1.5);
      height: 2px;
      background: var(--scta-dot-color);
      border-radius: 1px;
    }

    .support-cta__dot--none {
      display: none;
    }

    .support-cta__title {
      font-family: var(--font-heading-family);
      font-size: var(--scta-title-size-desktop);
      font-weight: var(--scta-title-weight-desktop);
      color: var(--scta-title-color-desktop);
      white-space: nowrap;
      line-height: 1;
      display: flex;
      align-items: center;
    }

    /* Divider styles - minimal and modern */
    .support-cta__divider {
      flex-shrink: 0;
    }

    .support-cta__divider--line {
      width: 1px;
      height: 1.5rem;
      background: var(--scta-divider-color);
      opacity: 0.2;
    }

    .support-cta__divider--dot {
      width: 3px;
      height: 3px;
      background: var(--scta-divider-color);
      border-radius: 50%;
      opacity: 0.4;
    }

    .support-cta__divider--slash {
      font-size: 0.875rem;
      color: var(--scta-divider-color);
      opacity: 0.25;
      font-weight: 300;
    }

    .support-cta__divider--slash::before {
      content: "/";
    }

    .support-cta__divider--none {
      display: none;
    }

    .support-cta__body {
      font-family: var(--font-body-family);
      font-size: var(--scta-body-size-desktop);
      color: var(--scta-body-color-desktop);
      margin: 0;
      line-height: 1.5;
      flex: 1;
    }

    .support-cta__contact {
      font-family: var(--font-body-family);
      font-size: 0.6875rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--scta-title-color-desktop);
      text-decoration: none;
      padding: 0.5rem;
      transition: opacity 0.2s ease;
      flex-shrink: 0;
    }

    .support-cta__contact:hover {
      opacity: 0.7;
    }

    /* OPEN HUB button wrapper - absolutely positioned for equal edge gaps */
    .support-cta__open-wrapper {
      position: absolute;
      top: var(--scta-btn-edge-gap);
      right: var(--scta-btn-edge-gap);
      bottom: var(--scta-btn-edge-gap);
      display: flex;
      align-items: center;
      z-index: 3;
    }

    .support-cta__open {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.375rem;
      height: 100%;
      padding: 0 calc(var(--scta-btn-desktop-padding) * 2.5);
      background: var(--scta-btn-primary-bg);
      color: var(--scta-btn-primary-text);
      font-family: var(--font-body-family);
      font-size: 0.6875rem;
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 50px;
      transition: opacity 0.2s ease;
      white-space: nowrap;
    }

    .support-cta__open:hover {
      opacity: 0.9;
    }

    .support-cta__open svg {
      width: 12px;
      height: 12px;
    }
  }
{% endstylesheet %}

