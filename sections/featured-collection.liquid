<section
  class="featured-collection"
  style="
    --columns-desktop: {{ section.settings.columns_desktop }};
    --columns-mobile: {{ section.settings.columns_mobile }};
  "
>
  <div class="featured-collection__header">
    {% if section.settings.heading != blank %}
      <h2 class="featured-collection__title">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="featured-collection__subtitle text-muted">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>

  {% if section.settings.collection != blank %}
    <div class="featured-collection__grid">
      {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection.products.size > section.settings.products_to_show %}
      <div class="featured-collection__footer">
        <a href="{{ section.settings.collection.url }}" class="btn btn--outline">
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {% endif %}
  {% else %}
    <div class="featured-collection__grid">
      {% for i in (1..section.settings.products_to_show) %}
        <div class="product-card product-card--placeholder">
          <div class="product-card__image">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">{{ 'sections.featured_collection.placeholder_title' | t }}</h3>
            <p class="product-card__price">{{ 1999 | money }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</section>

{% stylesheet %}
  .featured-collection {
    padding: var(--section-spacing-mobile) var(--page-margin-mobile);
  }

  .featured-collection__header {
    text-align: center;
    max-width: 40rem;
    margin: 0 auto var(--space-2xl);
  }

  .featured-collection__title {
    margin: 0 0 var(--space-sm);
  }

  .featured-collection__subtitle {
    margin: 0;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-mobile), 1fr);
    gap: var(--space-md);
  }

  .featured-collection__footer {
    text-align: center;
    margin-top: var(--space-2xl);
  }

  .placeholder-svg {
    width: 100%;
    height: 100%;
    fill: var(--color-text-muted);
    opacity: 0.3;
  }

  @media (min-width: 768px) {
    .featured-collection {
      padding: var(--section-spacing) var(--page-margin);
    }

    .featured-collection__grid {
      grid-template-columns: repeat(var(--columns-desktop), 1fr);
      gap: var(--space-lg);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.featured_collection.heading",
      "default": "Featured collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.featured_collection.subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured_collection.collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "t:sections.featured_collection.products_to_show"
    },
    {
      "type": "header",
      "content": "t:sections.featured_collection.desktop"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "t:sections.featured_collection.columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "header",
      "content": "t:sections.featured_collection.mobile"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "t:sections.featured_collection.columns",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "t:sections.featured_collection.show_view_all",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.name"
    }
  ]
}
{% endschema %}
