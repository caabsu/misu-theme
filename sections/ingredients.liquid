{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_background
  assign text_color = section.settings.text_color | default: settings.color_text
  assign accent = section.settings.accent_color | default: settings.color_primary
  assign gap = section.settings.gap | default: 16
-%}

<section
  class="ingredients full-width"
  style="
    --ing-bg: {{ bg_color }};
    --ing-text: {{ text_color }};
    --ing-accent: {{ accent }};
    --ing-gap: {{ gap }}px;
    --ing-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --ing-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
    --ing-heading-weight: {{ section.settings.heading_weight }};
    --ing-name-size-mobile: {{ section.settings.name_size_mobile }}px;
    --ing-name-size-desktop: {{ section.settings.name_size_desktop }}px;
    --ing-name-weight: {{ section.settings.name_weight }};
    --ing-link-size: {{ section.settings.link_size }}px;
    --ing-link-weight: {{ section.settings.link_weight }};
    --ing-cta-size: {{ section.settings.cta_size }}px;
    --ing-cta-weight: {{ section.settings.cta_weight }};
  "
>
  {% if section.settings.heading != blank %}
    <header class="ingredients__header">
      <h2 class="ingredients__title">{{ section.settings.heading }}</h2>
    </header>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ingredients__grid">
      {% for block in section.blocks %}
        <article class="ingredients__item" {{ block.shopify_attributes }}>
          <div class="ingredients__visual">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 900 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                class="ingredients__img"
              >
            {% else %}
              <div class="ingredients__placeholder"></div>
            {% endif %}

            <div class="ingredients__overlay">
              <span class="ingredients__name">{{ block.settings.title }}</span>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="ingredients__link">
                  {{ block.settings.link_text | default: 'View details' }}
                </a>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    <footer class="ingredients__footer">
      <a href="{{ section.settings.cta_url }}" class="ingredients__cta">
        {{ section.settings.cta_text }}
      </a>
    </footer>
  {% endif %}
</section>

{% stylesheet %}
  .ingredients {
    background: var(--ing-bg);
    color: var(--ing-text);
    padding: var(--space-lg) var(--page-margin) var(--space-xl);
    text-align: center;
  }

  .ingredients__header {
    margin-bottom: var(--space-lg);
  }

  .ingredients__title {
    font-family: var(--font-heading-family);
    font-size: var(--ing-heading-size-mobile);
    font-weight: var(--ing-heading-weight);
    letter-spacing: -0.01em;
    color: var(--ing-accent);
    margin: 0;
  }

  .ingredients__grid {
    display: flex;
    gap: var(--ing-gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .ingredients__grid::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .ingredients__grid {
      justify-content: center;
      overflow-x: visible;
      flex-wrap: wrap;
    }
  }

  .ingredients__item {
    flex: 0 0 280px;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .ingredients__item {
      flex: 0 0 300px;
    }
  }

  @media (min-width: 1024px) {
    .ingredients__item {
      flex: 0 0 340px;
    }
  }

  .ingredients__visual {
    position: relative;
    overflow: hidden;
  }

  .ingredients__img {
    display: block;
    width: 100%;
    aspect-ratio: 5 / 3;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__placeholder {
    width: 100%;
    aspect-ratio: 5 / 3;
    background: linear-gradient(
      135deg,
      var(--ing-accent) 0%,
      transparent 80%
    );
    opacity: 0.1;
  }

  .ingredients__item:hover .ingredients__img {
    transform: scale(1.02);
  }

  .ingredients__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: var(--space-md);
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.55) 0%,
      transparent 50%
    );
  }

  .ingredients__name {
    font-family: var(--font-heading-family);
    font-size: var(--ing-name-size-mobile);
    font-weight: var(--ing-name-weight);
    color: #fff;
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 0.5s ease, transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__item:hover .ingredients__name {
    opacity: 1;
    transform: translateY(0);
  }

  .ingredients__link {
    font-size: var(--ing-link-size);
    font-weight: var(--ing-link-weight);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #fff;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    padding-bottom: 2px;
    margin-top: var(--space-sm);
    opacity: 0;
    transform: translateY(12px);
    transition: opacity 0.5s ease 0.08s, transform 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.08s, border-color 0.3s ease;
  }

  .ingredients__item:hover .ingredients__link {
    opacity: 0.75;
    transform: translateY(0);
  }

  .ingredients__link:hover {
    opacity: 1;
    border-bottom-color: #fff;
  }

  .ingredients__footer {
    margin-top: var(--space-xl);
  }

  .ingredients__cta {
    display: inline-block;
    font-size: var(--ing-cta-size);
    font-weight: var(--ing-cta-weight);
    color: var(--ing-text);
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid var(--ing-accent);
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .ingredients__cta:hover {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .ingredients {
      padding: var(--space-xl) var(--page-margin) var(--space-2xl);
    }

    .ingredients__title {
      font-size: var(--ing-heading-size-desktop);
    }

    .ingredients__name {
      font-size: var(--ing-name-size-desktop);
    }
  }
{% endstylesheet %}

