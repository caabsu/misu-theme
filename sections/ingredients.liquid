{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_background
  assign text_color = section.settings.text_color | default: settings.color_text
  assign accent = section.settings.accent_color | default: settings.color_primary
  assign gap = section.settings.gap | default: 16
-%}

<section
  class="ingredients full-width"
  style="
    --ing-bg: {{ bg_color }};
    --ing-text: {{ text_color }};
    --ing-accent: {{ accent }};
    --ing-gap: {{ gap }}px;
  "
>
  {% if section.settings.heading != blank %}
    <header class="ingredients__header">
      <h2 class="ingredients__title">{{ section.settings.heading }}</h2>
    </header>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ingredients__grid">
      {% for block in section.blocks %}
        <article class="ingredients__item" {{ block.shopify_attributes }}>
          <div class="ingredients__visual">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 900 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                class="ingredients__img"
              >
            {% else %}
              <div class="ingredients__placeholder"></div>
            {% endif %}

            <div class="ingredients__overlay">
              <span class="ingredients__name">{{ block.settings.title }}</span>
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="ingredients__link">
                  {{ block.settings.link_text | default: 'View details' }}
                </a>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    <footer class="ingredients__footer">
      <a href="{{ section.settings.cta_url }}" class="ingredients__cta">
        {{ section.settings.cta_text }}
      </a>
    </footer>
  {% endif %}
</section>

{% stylesheet %}
  .ingredients {
    background: var(--ing-bg);
    color: var(--ing-text);
    padding: var(--space-xl) var(--page-margin) var(--space-2xl);
    text-align: center;
  }

  .ingredients__header {
    margin-bottom: var(--space-lg);
  }

  .ingredients__title {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-lg);
    font-weight: var(--font-heading-weight);
    letter-spacing: -0.01em;
    color: var(--ing-accent);
    margin: 0;
  }

  .ingredients__grid {
    display: flex;
    gap: var(--ing-gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .ingredients__grid::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .ingredients__grid {
      justify-content: center;
      overflow-x: visible;
      flex-wrap: wrap;
    }
  }

  .ingredients__item {
    flex: 0 0 280px;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .ingredients__item {
      flex: 0 0 300px;
    }
  }

  @media (min-width: 1024px) {
    .ingredients__item {
      flex: 0 0 340px;
    }
  }

  .ingredients__visual {
    position: relative;
    overflow: hidden;
  }

  .ingredients__img {
    display: block;
    width: 100%;
    aspect-ratio: 5 / 3;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__placeholder {
    width: 100%;
    aspect-ratio: 5 / 3;
    background: linear-gradient(
      135deg,
      var(--ing-accent) 0%,
      transparent 80%
    );
    opacity: 0.1;
  }

  .ingredients__item:hover .ingredients__img {
    transform: scale(1.02);
  }

  .ingredients__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding: var(--space-md);
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.5) 0%,
      transparent 60%
    );
  }

  .ingredients__name {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-base);
    font-weight: 500;
    color: #fff;
    transform: translateY(4px);
    opacity: 0.9;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__item:hover .ingredients__name {
    transform: translateY(0);
    opacity: 1;
  }

  .ingredients__link {
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: #fff;
    text-decoration: none;
    opacity: 0;
    transform: translateY(8px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    margin-top: var(--space-xs);
    padding-bottom: 1px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.6);
  }

  .ingredients__item:hover .ingredients__link {
    opacity: 0.85;
    transform: translateY(0);
    transition-delay: 0.05s;
  }

  .ingredients__link:hover {
    opacity: 1;
  }

  .ingredients__footer {
    margin-top: var(--space-xl);
  }

  .ingredients__cta {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--ing-text);
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid var(--ing-accent);
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .ingredients__cta:hover {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .ingredients {
      padding: var(--space-2xl) var(--page-margin) var(--space-3xl);
    }
  }
{% endstylesheet %}

{% schema %}
