{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_background
  assign text_color = section.settings.text_color | default: settings.color_text
  assign accent = section.settings.accent_color | default: settings.color_primary
-%}

<section
  class="ingredients full-width"
  data-ingredients
  style="
    --ing-bg: {{ bg_color }};
    --ing-text: {{ text_color }};
    --ing-accent: {{ accent }};
  "
>
  {% if section.settings.heading != blank %}
    <header class="ingredients__header">
      <h2 class="ingredients__title">{{ section.settings.heading }}</h2>
      <div class="ingredients__line"></div>
    </header>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ingredients__track" data-track>
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.link | default: '#' }}"
          class="ingredients__item"
          {{ block.shopify_attributes }}
        >
          <div class="ingredients__visual">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                class="ingredients__img"
              >
            {% else %}
              <div class="ingredients__placeholder"></div>
            {% endif %}
            <div class="ingredients__ring"></div>
          </div>
          <span class="ingredients__name">{{ block.settings.title }}</span>
        </a>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    <footer class="ingredients__footer">
      <a href="{{ section.settings.cta_url }}" class="ingredients__cta">
        {{ section.settings.cta_text }}
      </a>
    </footer>
  {% endif %}
</section>

{% stylesheet %}
  .ingredients {
    --ring-size: 140px;
    background: var(--ing-bg);
    color: var(--ing-text);
    padding: var(--space-4xl) var(--page-margin);
    text-align: center;
  }

  .ingredients__header {
    margin-bottom: var(--space-3xl);
  }

  .ingredients__title {
    font-family: var(--font-heading-family);
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--ing-accent);
    margin: 0 0 var(--space-lg);
  }

  .ingredients__line {
    width: 60px;
    height: 1px;
    background: var(--ing-accent);
    margin: 0 auto;
    opacity: 0.4;
  }

  .ingredients__track {
    display: flex;
    gap: var(--space-2xl);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding: var(--space-xl) var(--space-lg);
    justify-content: flex-start;
  }

  .ingredients__track::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .ingredients__track {
      justify-content: center;
      overflow-x: visible;
      flex-wrap: wrap;
    }
  }

  .ingredients__item {
    flex: 0 0 auto;
    scroll-snap-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    text-decoration: none;
    color: inherit;
  }

  .ingredients__visual {
    position: relative;
    width: var(--ring-size);
    height: var(--ring-size);
  }

  .ingredients__img {
    position: absolute;
    inset: 10%;
    width: 80%;
    height: 80%;
    object-fit: cover;
    border-radius: 50%;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__placeholder {
    position: absolute;
    inset: 10%;
    width: 80%;
    height: 80%;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--ing-accent) 0%,
      transparent 60%
    );
    opacity: 0.15;
  }

  .ingredients__ring {
    position: absolute;
    inset: 0;
    border: 1px solid var(--ing-accent);
    border-radius: 50%;
    opacity: 0.3;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__ring::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 50%;
    width: 8px;
    height: 8px;
    background: var(--ing-accent);
    border-radius: 50%;
    transform: translateX(-50%);
    opacity: 0.6;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    animation: orbit 8s linear infinite;
  }

  .ingredients__item:hover .ingredients__ring {
    opacity: 0.6;
    transform: scale(1.08);
  }

  .ingredients__item:hover .ingredients__ring::before {
    opacity: 1;
    animation-duration: 4s;
  }

  .ingredients__item:hover .ingredients__img {
    transform: scale(1.05);
  }

  .ingredients__name {
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--ing-accent);
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .ingredients__item:hover .ingredients__name {
    opacity: 1;
  }

  .ingredients__footer {
    margin-top: var(--space-3xl);
  }

  .ingredients__cta {
    display: inline-block;
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--ing-text);
    text-decoration: none;
    padding-bottom: 4px;
    border-bottom: 1px solid currentColor;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .ingredients__cta:hover {
    opacity: 1;
  }

  @keyframes orbit {
    from {
      transform: translateX(-50%) rotate(0deg) translateY(-70px) rotate(0deg);
    }
    to {
      transform: translateX(-50%) rotate(360deg) translateY(-70px) rotate(-360deg);
    }
  }

  @media (min-width: 768px) {
    .ingredients {
      --ring-size: 160px;
      padding: var(--space-5xl) var(--page-margin);
    }

    .ingredients__track {
      gap: var(--space-3xl);
    }
  }

  @media (min-width: 1024px) {
    .ingredients {
      --ring-size: 180px;
    }

    .ingredients__track {
      gap: var(--space-4xl);
    }
  }
{% endstylesheet %}

