{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_background
  assign text_color = section.settings.text_color | default: settings.color_text
  assign accent = section.settings.accent_color | default: settings.color_primary
-%}

<section
  class="ingredients full-width"
  style="
    --ing-bg: {{ bg_color }};
    --ing-text: {{ text_color }};
    --ing-accent: {{ accent }};
  "
>
  {% if section.settings.heading != blank %}
    <header class="ingredients__header">
      <h2 class="ingredients__title">{{ section.settings.heading }}</h2>
    </header>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ingredients__grid">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.link | default: '#' }}"
          class="ingredients__item"
          {{ block.shopify_attributes }}
        >
          <figure class="ingredients__figure">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                class="ingredients__img"
              >
            {% else %}
              <div class="ingredients__placeholder"></div>
            {% endif %}
            <div class="ingredients__frame">
              <span class="ingredients__line ingredients__line--top"></span>
              <span class="ingredients__line ingredients__line--right"></span>
              <span class="ingredients__line ingredients__line--bottom"></span>
              <span class="ingredients__line ingredients__line--left"></span>
            </div>
          </figure>
          <figcaption class="ingredients__caption">
            <span class="ingredients__name">{{ block.settings.title }}</span>
          </figcaption>
        </a>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    <footer class="ingredients__footer">
      <a href="{{ section.settings.cta_url }}" class="ingredients__cta">
        {{ section.settings.cta_text }}
      </a>
    </footer>
  {% endif %}
</section>

{% stylesheet %}
  .ingredients {
    background: var(--ing-bg);
    color: var(--ing-text);
    padding: var(--space-4xl) var(--page-margin);
    text-align: center;
  }

  .ingredients__header {
    margin-bottom: var(--space-2xl);
  }

  .ingredients__title {
    font-family: var(--font-heading-family);
    font-size: var(--font-size-lg);
    font-weight: var(--font-heading-weight);
    letter-spacing: -0.01em;
    color: var(--ing-accent);
    margin: 0;
  }

  .ingredients__grid {
    display: flex;
    gap: var(--space-lg);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding: var(--space-md) 0;
  }

  .ingredients__grid::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .ingredients__grid {
      justify-content: center;
      overflow-x: visible;
      flex-wrap: wrap;
      gap: var(--space-xl);
    }
  }

  .ingredients__item {
    flex: 0 0 260px;
    scroll-snap-align: center;
    text-decoration: none;
    color: inherit;
  }

  @media (min-width: 768px) {
    .ingredients__item {
      flex: 0 0 280px;
    }
  }

  @media (min-width: 1024px) {
    .ingredients__item {
      flex: 0 0 300px;
    }
  }

  .ingredients__figure {
    position: relative;
    margin: 0;
    overflow: hidden;
  }

  .ingredients__img {
    display: block;
    width: 100%;
    aspect-ratio: 4 / 5;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__placeholder {
    width: 100%;
    aspect-ratio: 4 / 5;
    background: linear-gradient(
      160deg,
      transparent 40%,
      var(--ing-accent) 100%
    );
    opacity: 0.08;
  }

  .ingredients__frame {
    position: absolute;
    inset: 12px;
    pointer-events: none;
  }

  .ingredients__line {
    position: absolute;
    background: var(--ing-accent);
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__line--top,
  .ingredients__line--bottom {
    height: 1px;
    width: 0;
  }

  .ingredients__line--left,
  .ingredients__line--right {
    width: 1px;
    height: 0;
  }

  .ingredients__line--top {
    top: 0;
    left: 0;
  }

  .ingredients__line--right {
    top: 0;
    right: 0;
  }

  .ingredients__line--bottom {
    bottom: 0;
    right: 0;
  }

  .ingredients__line--left {
    bottom: 0;
    left: 0;
  }

  .ingredients__item:hover .ingredients__line {
    opacity: 0.6;
  }

  .ingredients__item:hover .ingredients__line--top,
  .ingredients__item:hover .ingredients__line--bottom {
    width: 40px;
  }

  .ingredients__item:hover .ingredients__line--left,
  .ingredients__item:hover .ingredients__line--right {
    height: 40px;
  }

  .ingredients__item:hover .ingredients__img {
    transform: scale(1.03);
  }

  .ingredients__caption {
    padding-top: var(--space-md);
  }

  .ingredients__name {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--ing-accent);
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .ingredients__item:hover .ingredients__name {
    opacity: 1;
  }

  .ingredients__footer {
    margin-top: var(--space-3xl);
  }

  .ingredients__cta {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--ing-text);
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid var(--ing-accent);
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .ingredients__cta:hover {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .ingredients {
      padding: var(--space-5xl) var(--page-margin);
    }
  }
{% endstylesheet %}

