{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_background
  assign text_color = section.settings.text_color | default: settings.color_text
  assign accent = section.settings.accent_color | default: settings.color_primary

  assign heading_color = section.settings.heading_color | default: accent
  assign subheading_color = section.settings.subheading_color | default: text_color
  assign name_color = section.settings.name_color | default: '#ffffff'
  assign link_color = section.settings.link_color | default: '#ffffff'
  assign cta_color = section.settings.cta_color | default: text_color
-%}

<section
  class="ingredients full-width"
  style="
    --ing-bg: {{ bg_color }};
    --ing-text: {{ text_color }};
    --ing-accent: {{ accent }};

    --ing-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --ing-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --ing-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --ing-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --ing-gap: {{ section.settings.gap }}px;

    --ing-heading-spacing-mobile: {{ section.settings.heading_spacing_mobile }}px;
    --ing-heading-spacing-desktop: {{ section.settings.heading_spacing_desktop }}px;
    --ing-subheading-spacing-mobile: {{ section.settings.subheading_spacing_mobile }}px;
    --ing-subheading-spacing-desktop: {{ section.settings.subheading_spacing_desktop }}px;
    --ing-footer-spacing-mobile: {{ section.settings.footer_spacing_mobile }}px;
    --ing-footer-spacing-desktop: {{ section.settings.footer_spacing_desktop }}px;

    --ing-heading-color: {{ heading_color }};
    --ing-heading-size-mobile: {{ section.settings.heading_size_mobile }}px;
    --ing-heading-size-desktop: {{ section.settings.heading_size_desktop }}px;
    --ing-heading-weight: {{ section.settings.heading_weight }};

    --ing-subheading-color: {{ subheading_color }};
    --ing-subheading-size-mobile: {{ section.settings.subheading_size_mobile }}px;
    --ing-subheading-size-desktop: {{ section.settings.subheading_size_desktop }}px;
    --ing-subheading-weight: {{ section.settings.subheading_weight }};

    --ing-name-color: {{ name_color }};
    --ing-name-size-mobile: {{ section.settings.name_size_mobile }}px;
    --ing-name-size-desktop: {{ section.settings.name_size_desktop }}px;
    --ing-name-weight: {{ section.settings.name_weight }};

    --ing-link-color: {{ link_color }};
    --ing-link-size-mobile: {{ section.settings.link_size_mobile }}px;
    --ing-link-size-desktop: {{ section.settings.link_size_desktop }}px;
    --ing-link-weight: {{ section.settings.link_weight }};

    --ing-cta-color: {{ cta_color }};
    --ing-cta-size-mobile: {{ section.settings.cta_size_mobile }}px;
    --ing-cta-size-desktop: {{ section.settings.cta_size_desktop }}px;
    --ing-cta-weight: {{ section.settings.cta_weight }};
  "
>
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    <header class="ingredients__header">
      {% if section.settings.heading != blank %}
        <h2 class="ingredients__title">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="ingredients__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="ingredients__grid">
      {% for block in section.blocks %}
        <article class="ingredients__item" {{ block.shopify_attributes }}>
          <div class="ingredients__visual">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 900 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                class="ingredients__img"
              >
            {% else %}
              <div class="ingredients__placeholder"></div>
            {% endif %}

            <div class="ingredients__overlay">
              <div class="ingredients__row">
                <div class="ingredients__text-wrap">
                  <span class="ingredients__name">{{ block.settings.title }}</span>
                  <span class="ingredients__line"></span>
                </div>
                <a href="{{ block.settings.link | default: '#' }}" class="ingredients__link">
                  {{ block.settings.link_text | default: 'Details' }}
                </a>
              </div>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.settings.cta_text != blank %}
    <footer class="ingredients__footer">
      <a href="{{ section.settings.cta_url }}" class="ingredients__cta">
        {{ section.settings.cta_text }}
      </a>
    </footer>
  {% endif %}
</section>

{% stylesheet %}
  .ingredients {
    background: var(--ing-bg);
    color: var(--ing-text);
    padding: var(--ing-padding-top-mobile) var(--page-margin) var(--ing-padding-bottom-mobile);
    text-align: center;
  }

  .ingredients__header {
    margin-bottom: var(--ing-subheading-spacing-mobile);
  }

  .ingredients__title {
    font-family: var(--font-heading-family);
    font-size: var(--ing-heading-size-mobile);
    font-weight: var(--ing-heading-weight);
    letter-spacing: -0.01em;
    color: var(--ing-heading-color);
    margin: 0 0 var(--ing-heading-spacing-mobile);
  }

  .ingredients__title:last-child {
    margin-bottom: 0;
  }

  .ingredients__subtitle {
    font-family: var(--font-body-family);
    font-size: var(--ing-subheading-size-mobile);
    font-weight: var(--ing-subheading-weight);
    color: var(--ing-subheading-color);
    margin: 0;
    opacity: 0.8;
  }

  .ingredients__grid {
    display: flex;
    gap: var(--ing-gap);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .ingredients__grid::-webkit-scrollbar {
    display: none;
  }

  @media (min-width: 768px) {
    .ingredients__grid {
      justify-content: center;
      overflow-x: visible;
      flex-wrap: wrap;
    }
  }

  .ingredients__item {
    flex: 0 0 280px;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .ingredients__item {
      flex: 0 0 300px;
    }
  }

  @media (min-width: 1024px) {
    .ingredients__item {
      flex: 0 0 340px;
    }
  }

  .ingredients__visual {
    position: relative;
    overflow: hidden;
  }

  .ingredients__img {
    display: block;
    width: 100%;
    aspect-ratio: 5 / 3;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__placeholder {
    width: 100%;
    aspect-ratio: 5 / 3;
    background: linear-gradient(
      135deg,
      var(--ing-accent) 0%,
      transparent 80%
    );
    opacity: 0.1;
  }

  .ingredients__item:hover .ingredients__img {
    transform: scale(1.02);
  }

  .ingredients__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: var(--space-md);
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.45) 0%,
      transparent 55%
    );
  }

  .ingredients__row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    width: 100%;
    gap: var(--space-md);
  }

  .ingredients__text-wrap {
    position: relative;
  }

  .ingredients__name {
    font-family: var(--font-heading-family);
    font-size: var(--ing-name-size-mobile);
    font-weight: var(--ing-name-weight);
    color: var(--ing-name-color);
  }

  .ingredients__line {
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--ing-name-color) 0%, transparent 100%);
    transition: width 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ingredients__item:hover .ingredients__line {
    width: 100%;
  }

  .ingredients__link {
    font-size: var(--ing-link-size-mobile);
    font-weight: var(--ing-link-weight);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--ing-link-color);
    text-decoration: none;
    opacity: 0.5;
    white-space: nowrap;
    flex-shrink: 0;
    transition: opacity 0.3s ease;
  }

  .ingredients__item:hover .ingredients__link {
    opacity: 0.8;
  }

  .ingredients__link:hover {
    opacity: 1;
  }

  .ingredients__footer {
    margin-top: var(--ing-footer-spacing-mobile);
  }

  .ingredients__cta {
    display: inline-block;
    font-size: var(--ing-cta-size-mobile);
    font-weight: var(--ing-cta-weight);
    color: var(--ing-cta-color);
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid var(--ing-accent);
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .ingredients__cta:hover {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .ingredients {
      padding: var(--ing-padding-top-desktop) var(--page-margin) var(--ing-padding-bottom-desktop);
    }

    .ingredients__header {
      margin-bottom: var(--ing-subheading-spacing-desktop);
    }

    .ingredients__title {
      font-size: var(--ing-heading-size-desktop);
      margin-bottom: var(--ing-heading-spacing-desktop);
    }

    .ingredients__title:last-child {
      margin-bottom: 0;
    }

    .ingredients__subtitle {
      font-size: var(--ing-subheading-size-desktop);
    }

    .ingredients__footer {
      margin-top: var(--ing-footer-spacing-desktop);
    }

    .ingredients__name {
      font-size: var(--ing-name-size-desktop);
    }

    .ingredients__link {
      font-size: var(--ing-link-size-desktop);
    }

    .ingredients__cta {
      font-size: var(--ing-cta-size-desktop);
    }
  }
{% endstylesheet %}

