{% style %}
  .support-link {
    --sl-bg: {{ section.settings.background_color }};
    --sl-border-color: {{ section.settings.border_color }};
    --sl-border-width: {{ section.settings.border_width }}px;
    --sl-border-radius: {{ section.settings.border_radius }}px;
    --sl-subtitle-color: {{ section.settings.subtitle_color }};
    --sl-subtitle-size: {{ section.settings.subtitle_size }}px;
    --sl-subtitle-weight: {{ section.settings.subtitle_weight }};
    --sl-title-color: {{ section.settings.title_color }};
    --sl-title-size: {{ section.settings.title_size }}px;
    --sl-title-weight: {{ section.settings.title_weight }};
    --sl-arrow-bg: {{ section.settings.arrow_bg }};
    --sl-arrow-color: {{ section.settings.arrow_color }};
    --sl-arrow-size: {{ section.settings.arrow_size }}px;
    --sl-padding-x: {{ section.settings.padding_x }}px;
    --sl-padding-y: {{ section.settings.padding_y }}px;
    --sl-margin-top: {{ section.settings.margin_top }}px;
    --sl-margin-bottom: {{ section.settings.margin_bottom }}px;
    --sl-title-size-desktop: {{ section.settings.title_size_desktop }}px;
    --sl-subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
    --sl-arrow-size-desktop: {{ section.settings.arrow_size_desktop }}px;
    --sl-image-opacity: {{ section.settings.image_opacity | divided_by: 100.0 }};
  }
{% endstyle %}

<div class="support-link">
  <a href="{{ section.settings.link_url }}" class="support-link__card">
    {% if section.settings.background_image %}
      <div class="support-link__image">
        {{ section.settings.background_image | image_url: width: 800 | image_tag: loading: 'lazy' }}
      </div>
      <div class="support-link__image-fade"></div>
    {% endif %}
    <span class="support-link__border"></span>
    <div class="support-link__content">
      <div class="support-link__text">
        {% if section.settings.subtitle != blank %}
          <span class="support-link__subtitle">{{ section.settings.subtitle }}</span>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="support-link__title">{{ section.settings.title }}</h2>
        {% endif %}
      </div>
      <div class="support-link__arrow">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </div>
    </div>
  </a>
</div>

{% stylesheet %}
  .support-link {
    margin-top: var(--sl-margin-top);
    margin-bottom: var(--sl-margin-bottom);
  }

  .support-link__card {
    position: relative;
    display: block;
    background: var(--sl-bg);
    border-radius: var(--sl-border-radius);
    padding: var(--sl-padding-y) var(--sl-padding-x);
    text-decoration: none;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .support-link__card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  /* Background image */
  .support-link__image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 60%;
    z-index: 0;
    overflow: hidden;
  }

  .support-link__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center right;
    opacity: var(--sl-image-opacity);
    transition: transform 0.4s ease;
  }

  .support-link__card:hover .support-link__image img {
    transform: scale(1.05);
  }

  /* Fade overlay from left (background color) to transparent on right */
  .support-link__image-fade {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 60%;
    z-index: 1;
    background: linear-gradient(
      to right,
      var(--sl-bg) 0%,
      var(--sl-bg) 10%,
      transparent 65%,
      transparent 100%
    );
    pointer-events: none;
  }

  /* Animated border */
  .support-link__border {
    position: absolute;
    inset: 0;
    z-index: 4;
    border-radius: var(--sl-border-radius);
    padding: var(--sl-border-width);
    background: linear-gradient(
      90deg,
      var(--sl-border-color) 0%,
      color-mix(in srgb, var(--sl-border-color) 50%, transparent) 25%,
      var(--sl-border-color) 50%,
      color-mix(in srgb, var(--sl-border-color) 50%, transparent) 75%,
      var(--sl-border-color) 100%
    );
    background-size: 200% 100%;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
    animation: borderShimmer 3s ease-in-out infinite;
  }

  @keyframes borderShimmer {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .support-link__card:hover .support-link__border {
    animation: borderShimmerFast 1.5s ease-in-out infinite;
  }

  @keyframes borderShimmerFast {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .support-link__content {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .support-link__text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .support-link__subtitle {
    font-family: var(--font-body-family);
    font-size: var(--sl-subtitle-size);
    font-weight: var(--sl-subtitle-weight);
    color: var(--sl-subtitle-color);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    line-height: 1.3;
  }

  .support-link__title {
    font-family: var(--font-heading-family);
    font-size: var(--sl-title-size);
    font-weight: var(--sl-title-weight);
    color: var(--sl-title-color);
    margin: 0;
    line-height: 1.2;
  }

  .support-link__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--sl-arrow-size);
    height: var(--sl-arrow-size);
    flex-shrink: 0;
    background: var(--sl-arrow-bg);
    border-radius: 50%;
    color: var(--sl-arrow-color);
    transition: transform 0.3s ease, background 0.3s ease;
  }

  .support-link__arrow svg {
    width: 45%;
    height: 45%;
  }

  .support-link__card:hover .support-link__arrow {
    transform: translateX(3px);
  }

  @media (min-width: 768px) {
    .support-link__subtitle {
      font-size: var(--sl-subtitle-size-desktop);
    }

    .support-link__title {
      font-size: var(--sl-title-size-desktop);
    }

    .support-link__arrow {
      width: var(--sl-arrow-size-desktop);
      height: var(--sl-arrow-size-desktop);
    }
  }
{% endstylesheet %}

